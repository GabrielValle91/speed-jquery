<%= javascript_include_tag 'vehicles' %>
<div class="container-fluid">
  <%= render partial: 'list' %>
  <br>
  <%= link_to "Edit vehicle details", edit_vehicle_path(@vehicle) %>
  <h4 class="col-3 justify-content-start">Vehicle Number: <%= @vehicle.vehicle_number %></h4>
  <div class="row">
    <div class="col-3 justify-content-start border border-dark">
      <h4>Billing Information</h4>
      <p>Vehicle Owner: <%= @vehicle.vehicle_owner%></p>
      <p>Vehicle Type: <%= @vehicle.vehicle_type %></p>
    </div>
    <div class="col-3 justify-content-start border border-dark", style="overflow: auto; height:360px;">
      <h4>Rental</h4>
        <table class="table table-striped table-sm">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Rental Start</th>
              <th scope="col">Rental End</th>
            </tr>
          </thead>
          <tbody>
            <% @vehicle.vehicle_rentals.each do |rental| %>
            <tr>
              <td><%= rental.start_date ? beginning_date(rental) : '' %></td>
              <td><%= rental.end_date ? ending_date(rental) : '' %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
  <div class="row">
    <div class="col-3 justify-content-start border border-dark">
      <h4>Active Offices</h4>
      <ul>
        <% @vehicle.offices.each do |office| %>
          <li><%= office.name %>
        <% end %>
      </ul>
    </div>
  </div>
</div>