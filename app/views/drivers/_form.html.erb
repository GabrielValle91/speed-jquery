<div class="row">
  <%= form_for driver do |f| %>
    <% if flash[:notice] %>
      <% flash[:notice].each do |msg| %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <%= msg %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
      <br>
    <% end %>
    <div class="col-md-12">
      <div class="col-md-12">
        <div class="form-row">
          <div class="form-group col-md-12">
            <%= f.label :name, value="Name (this will appear in dropdowns)", class:"col-md-12 control-label" %>
            <%= f.text_field :name, class:"form-control form-control-sm" %>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-12">
            <%= f.label :employment_type, value="Type", class:"col-md-12 control-label" %>
            <%= f.select :employment_type, Driver::EMPLOYTYPES, {include_blank: true}, class:"form-control form-control-sm" %>
          </div>
        </div>
        <div class="form-row">
        <div class="form-group col-md-12">
          <%= f.label :license, value="License", class:"col-md-12 control-label" %>
          <%= f.select :license, Driver::LICENSES, {include_blank: true}, class:"form-control form-control-sm" %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-12">
          <%= f.label :default_vehicle_id, value="Default Vehicle", class:"col-md-12 control-label" %>
          <%= f.collection_select :default_vehicle_id, Vehicle.all, :id, :vehicle_number, {include_blank: true}, class:"form-control form-control-sm" %>
        </div>
        </div>
      </div>
    </div>
    <h4 class="col-md-12">Offices</h4>
    <div class="form-row col-md-12">
      <div class="form-group col-md-12">
        <%= f.collection_check_boxes :office_ids, current_user.offices, :id, :name %>
      </div>
    </div>
    <div class="form-group row col-md-1">
      <div class="form-group col-md-12">
        <%= f.submit %>
      </div>
    </div>
  <% end %>
</div>