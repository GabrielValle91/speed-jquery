<div class="row col-md-12 border border-dark">
  <div class="col-md-6">
    <div class="row col-md-12">
      <div class="form-group col-md-0.5">
        <label>Stop <span class="stopNum"><%= shipment_stop.stop_number %></span></label>
        <input class="stopId" type="hidden" value="<%= shipment_stop.id %>">
      </div>
      <div class="form-group col-md-2">
        <label class="col-md-12 control-label">Office</label>
        <select class="form-control form-control-sm" id="office-stop-<%=shipment_stop.id%>">
          <option></option>
          <% Office.all.each do |office| %>
            <option id="office-<%=office.id%>" <%= 'selected' if shipment_stop.office_id == office.id %>><%= office.name %></option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="row col-md-12">
      <div class="form-group col-md-auto">
        <label class="col-md-12 control-label">Start Date</label>
        <input class="form-control form-control-sm" id="date-start-stop-<%=shipment_stop.id%>" type="date" value=<%= shipment_stop.stop_start %>>
      </div>
      <div class="form-group col-md-auto">
        <label class="col-md-12 control-label">Start Time</label>
        <input class="form-control form-control-sm" id="date-start-time-stop-<%=shipment_stop.id%>" type="time" value=<%=  %>>
      </div>
      <div class="form-group col-md-auto">
        <label class="col-md-12 control-label">End Date</label>
        <input class="form-control form-control-sm" id="date-end-stop-<%=shipment_stop.id%>" type="date" value=<%= shipment_stop.stop_end %>>
      </div>
      <div class="form-group col-md-auto">
        <label class="col-md-12 control-label">End Time</label>
        <input class="form-control form-control-sm" id="date-end-time-stop-<%=shipment_stop.id%>" type="time" value=<%=  %>>
      </div>
    </div>
    <div class="row col-md-12">
      <div class="form-group col-md-4">
        <label class="col-md-12 control-label">Location</label>
        <select class="form-control form-control-sm" id="location-stop-<%=shipment_stop.id%>">
          <option></option>
          <% Location.all.each do |location| %>
            <option id="location-<%=location.id%>" <%= 'selected' if shipment_stop.location_id == location.id %>><%= location.company_name %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group col-md-2">
        <label class="col-md-12 control-label">Contact</label>
        <select class="form-control form-control-sm" id="contact-stop-<%shipment_stop.id%>">
          <option></option>
          <option>Contact Name</option>
        </select>
      </div>
      <div class="form-group col-md-2">
        <label class="col-md-12 control-label">Phone</label>
        <input type="text" class="form-control form-control-sm" id="phone-stop-<%shipment_stop.id%>">
      </div>
      <div class="form-group col-md-2">
        <label class="col-md-12 control-label">Email</label>
        <input type="text" class="form-control form-control-sm" id="email-stop-<%shipment_stop.id%>">
      </div>
    </div>
    <div class="row col-md-12">
      <div class="form-group col-md-4">
        <input type="text" class="form-control form-control-sm" id="address1-stop-<%=shipment_stop.id%>" value="<%= "#{shipment_stop.location.address1}" if shipment_stop.location_id %>">
      </div>
      <div class="form-group col-md-3">
        <input type="text" class="form-control form-control-sm" id="address2-stop-<%=shipment_stop.id%>" value="<%= "#{shipment_stop.location.address2}" if shipment_stop.location_id %>">
      </div>
    </div>
    <div class="row col-md-12">
      <div class="form-group col-md-3">
        <input type="text" class="form-control form-control-sm" id="city-stop-<%=shipment_stop.id%>" value="<%= "#{shipment_stop.location.city}" if shipment_stop.location_id %>">
      </div>
      <div class="form-group col-md-2">
        <select class="form-control form-control-sm" id="state-stop-<%=shipment_stop.id%>">
          <option></option>
          <% Location::STATES.each do |state| %>
            <option <%= 'selected' if shipment_stop.location_id && shipment_stop.location.state == state %>><%= state %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group col-md-2">
        <input type="text" class="form-control form-control-sm" id="zip-stop-<%=shipment_stop.id%>" value="<%= "#{shipment_stop.location.zip}" if shipment_stop.location_id %>">
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="row col-md-12">
      <div class="form-group col-md-auto">
        <label class="col-md-12 control-label">Stop Status</label>
        <select id="status-stop-<%=shipment_stop.id%>" class="form-control form-control-sm">
          <% ShipmentStop::STOPSTATUS.each do |status| %>
            <option <%= 'selected' if shipment_stop.stop_status == status %>><%= status %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group col-md-auto">
        <label class="col-md-12 control-label">Arrival Date</label>
        <input class="form-control form-control-sm" id="date-arrival-stop-<%=shipment_stop.id%>" type="date" value=<%= shipment_stop.stop_arrival %>>
      </div>
      <div class="form-group col-md-auto">
        <label class="col-md-12 control-label">Arrival Time</label>
        <input class="form-control form-control-sm" id="date-arrival-time-stop-<%=shipment_stop.id%>" type="time" value=<%=  %>>
      </div>
      <div class="form-group col-md-auto">
        <label class="col-md-12 control-label">Departure Date</label>
        <input class="form-control form-control-sm" id="date-departure-stop-<%=shipment_stop.id%>" type="date" value=<%= shipment_stop.stop_departure %>>
      </div>
      <div class="form-group col-md-auto">
        <label class="col-md-12 control-label">Departure Time</label>
        <input class="form-control form-control-sm" id="date-departure-time-stop-<%=shipment_stop.id%>" type="time" value=<%=  %>>
      </div>
    </div>
    <div class="row col-md-12">
      <div class="form-group col-md-auto">
        <label class="col-md-12 control-label">Driver</label>
        <select class="form-control form-control-sm" id="driver-stop-<%=shipment_stop.id%>">
          <option></option>
          <% current_office.drivers.each do |driver| %>
            <option id="driver-<%=driver.id%>" <%= 'selected' if shipment_stop.driver_id == driver.id %>><%= driver.name %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group col-md-auto">
        <label class="col-md-12 control-label">Vehicle</label>
        <select class="form-control form-control-sm" id="vehicle-stop-<%=shipment_stop.id%>">
          <option></option>
          <% current_office.vehicles.each do |vehicle| %>
            <option id="vehicle-<%=vehicle.id%>" <%= 'selected' if shipment_stop.vehicle_id == vehicle.id %>><%= vehicle.vehicle_number %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group col-md-auto">
        <label class="col-md-12 control-label">Trailer</label>
        <select class="form-control form-control-sm" id="trailer-stop-<%=shipment_stop.id%>">
          <option></option>
          <% current_office.trailers.each do |trailer| %>
            <option id="trailer-<%=trailer.id%>" <%= 'selected' if shipment_stop.trailer_id == trailer.id %>><%= trailer.trailer_number %></option>
          <% end %>
        </select>
      </div>
    </div>
  </div>
</div>
        
      