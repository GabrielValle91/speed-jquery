<%= javascript_include_tag 'trailers' %>
<div class="container-fluid">
  <%= render partial: 'list' %>
  <br>
  <%= link_to "Edit trailer details", edit_trailer_path(@trailer) %>
  <h4 class="col-3 justify-content-start">Trailer Number: <%= @trailer.trailer_number %></h4>
  <div class="row">
    <div class="col-3 justify-content-start border border-dark">
      <h4>Billing Information</h4>
      <p>Trailer Owner: <%= @trailer.trailer_owner%></p>
      <p>Trailer Owner Number: <%= @trailer.trailer_owner_number%></p>
      <p>Trailer Type: <%= @trailer.trailer_type %></p>
    </div>
    <div class="col-3 justify-content-start border border-dark", style="overflow: auto; height:360px;">
      <h4>Rental</h4>
        <table class="table table-striped table-sm">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Office</th>
              <th scope="col">Rental Start</th>
              <th scope="col">Rental End</th>
            </tr>
          </thead>
          <tbody>
            <% @trailer.trailer_rentals.each do |rental| %>
            <tr>
              <td><%= rental.office.name %></td>
              <td><%= rental.start_date ? beginning_date(rental) : '' %></td>
              <td><%= rental.end_date ? ending_date(rental) : '' %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
  <div class="row">
    <div class="col-3 justify-content-start border border-dark">
      <h4>Active Offices</h4>
      <ul>
        <% @trailer.offices.each do |office| %>
          <li><%= office.name %>
        <% end %>
      </ul>
    </div>
  </div>
</div>