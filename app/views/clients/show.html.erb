<%= javascript_include_tag 'clients' %>
<div class="container-fluid">
  <%= render partial: 'list' %>
  <br>
  <%= link_to "Edit client details", edit_client_path(@client) %>
  <h4 class="col-3 justify-content-start">Name: <%= @client.name %></h4>
  <div class="row">
    <div class="col-3 justify-content-start border border-dark">
      <h4>Billing Information</h4>
      <p>QB Account: <%= @client.qb_name%></p>
      <p>Address1: <%= @client.billing_address1 %></p>
      <p>Address2: <%= @client.billing_address2 %></p>
      <p>City: <%= @client.billing_city %></p>
      <p>State: <%= @client.billing_state %></p>
      <p>Zip: <%= @client.billing_zip %></p>
      <p>AR Email: <%= @client.billing_email %></p>
      <p>Net Terms: <%= @client.net_terms %></p>
    </div>
    <div class="col-3 justify-content-start border border-dark", style="overflow: auto; height:360px;">
      <h4>Tariffs</h4>
        <table class="table table-striped table-sm">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Tariff Name</th>
              <th scope="col">Rate</th>
              <th scope="col">Min</th>
              <th scope="col">Max</th>
            </tr>
          </thead>
          <tbody>
            <% @client.tariffs.each do |tariff| %>
            <tr>
              <td><%= tariff.name %></td>
              <td><%= tariff.rate %></td>
              <td><%= tariff.min %></td>
              <td><%= tariff.max %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
  <div class="row">
    <div class="col-3 justify-content-start border border-dark">
      <h4>Active Offices</h4>
      <ul>
        <% @client.offices.each do |office| %>
          <li><%= office.name %>
        <% end %>
      </ul>
    </div>
  </div>
</div>