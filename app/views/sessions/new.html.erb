<% flash.each do |name, msg| %>
  <div class="alert alert-danger alert-dismissible fade in">
  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
  <strong>Sorry!</strong> <%= msg %>
  </div>
<% end %>
<br>
<%= form_tag action="/login", class:"form-horizontal"%>
  <div class="form-group">
    <%= label_tag :username, nil , class:"col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= text_field_tag :username, nil , class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, nil , class:"col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= password_field_tag :password, nil , class:"form-control" %>
    </div>
  </div>
    <div class="form-group">
      <div class="col-sm-offset-1">
        <%= submit_tag "Sign In", class:"btn btn-success" %>
      </div>
    </div>  