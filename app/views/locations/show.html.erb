<%= javascript_include_tag 'locations' %>
<div class="container-fluid">
  <%= render partial: 'list' %>
  <br>
  <%= link_to "Edit location details", edit_location_path(@location) %>
  <div class="row">
    <div class="col-3 justify-content-start border border-dark">
      <h4>Name: <%= @location.company_name %></h4>
      <p>Address1: <%= @location.address1 %></p>
      <p>Address2: <%= @location.address2 %></p>
      <p>City: <%= @location.city %></p>
      <p>State: <%= @location.state %></p>
      <p>Zip: <%= @location.zip %></p>
    </div>
    <iframe width="500" height="300" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDhXkoxCo5qfHl_lyRe9fv1KA9Y3qogK6g&q=+<%= @location.address1 %>+<%= @location.city %>+<%= @location.state %>+<%= @location.zip %>"></iframe>
  </div>
</div>