<!DOCTYPE html>
<html>
  <head>
    <title>SpeedRailsJquery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <!-- Brand and toggle get grouped for better mobile display -->
        <a class="navbar-brand" href="#">SPEED</a>
           <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active"><a class="nav-link" href="/home">Home <span class="sr-only">(current)</span></a></li>
            <% if logged_in? %>
              <li class="nav-item"><a class="nav-link" href="/dispatch">Dispatch</a></li>
              <li class="nav-item"><a class="nav-link" href="<%= shipments_path %>">Shipments</a></li>
              <li class="nav-item"><a class="nav-link" href="<%= drivers_path %>">Drivers</a></li>
              <li class="nav-item"><a class="nav-link" href="<%= clients_path %>">Clients</a></li>
              <li class="nav-item"><a class="nav-link" href="<%= locations_path %>">Locations</a></li>
              <li class="nav-item"><a class="nav-link" href="<%= vehicles_path %>">Vehicles</a></li>
              <li class="nav-item"><a class="nav-link" href="<%= trailers_path %>">Trailers</a></li>
              <li class="nav-item"><a class="nav-link" href="<%= shipment_invoices_path %>">Invoices</a></li>
              <li class="nav-item"><a class="nav-link" href="<%= offices_path %>">Offices</a></li>
              <li class="nav-item"><a class="nav-link" href="<%= users_path %>">Users</a></li>
            <% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <li><a href="/logout">Log Out</a></li>
            <% else %>
              <li><a href="/login">Log In</a></li>
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
    </nav>
    <br><br><br>
    <div id="contentDisplay">
      <%= yield %>
    </div>
  </body>
</html>
